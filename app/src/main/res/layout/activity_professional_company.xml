        android:layout_marginLeft="200dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="204dp"
            android:layout_height="107dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/drawable_ritmo">

        </ImageView>

        <Button
            android:id="@+id/button_professional"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/drawable_circular_button_seven"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/registrate_como_profesional"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/drawable_ritmoseguro"
            />

        <Button
            android:id="@+id/button_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
